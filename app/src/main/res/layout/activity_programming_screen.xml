<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgrammingScreen">

<!-- Disable save if the coordinates of previous save are same as this one -->


    <TextView
        android:id="@+id/loadMotorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Load motor"
        android:background="@color/white3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loadMotorFwdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Forward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadMotorTextView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loadMotorBwdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Backward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loadMotorFwdButton" />


    <TextView
        android:background="@color/white3"
        android:layout_marginEnd="20dp"
        android:id="@+id/travelMotorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Travel motor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadMotorFwdButton" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/travelMotorFwdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Forward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travelMotorTextView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/travelMotorBwdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Backward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/travelMotorFwdButton" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveMotorPositionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travelMotorFwdButton" />






    <TextView
        android:id="@+id/statusReceivedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Machine status received"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/saveMotorPositionButton"
        app:layout_constraintStart_toStartOf="@id/statusReceivedTextView"
        />

    <TextView
        android:background="@color/white4"
        android:id="@+id/statusReceivedTextView"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusReceivedLabel" />


    <TextView
        android:id="@+id/commandSentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Command sent"
        app:layout_constraintTop_toBottomOf="@+id/statusReceivedTextView"
        app:layout_constraintStart_toStartOf="@id/commandSentTextView"
        />

    <TextView
        android:background="@color/white4"
        android:id="@+id/commandSentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commandSentLabel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveProgramButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Save Program"
        app:layout_constraintTop_toBottomOf="@id/commandSentTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>